generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model DridexUser {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  username   String   @default(dbgenerated("to_char(now(), 'YYYYMMDDHH24MISS')"))
  createdAt  DateTime @default(now())
  deviceInfo String
  location   String   @default("")
  balance    Float    @default(0.00)
  license    String   @default("")
}

model DridexTransfer {
  id           String   @id @default(cuid())
  userId       String
  createdAt    DateTime @default(now())
  transferdata String
}

model DridexLicense {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  userId      String
  licensedata String
}

model DridexTransaction {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  paymentId   String   @unique
  paymentType String
  userId      String
  amount      String
}

model FlashCryptoData {
  id        String   @id @default(cuid())
  uuid      String   @unique @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  data      String   @default("")
}

model FlashCryptoReward {
  id        String   @id @default(cuid())
  user      String   @default("")
  referer   String   @default("")
  createdAt DateTime @default(now())
}
