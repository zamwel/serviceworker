generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model DridexUser {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  username   String   @default(dbgenerated("to_char(now(), 'YYYYMMDDHH24MISS')"))
  createdAt  DateTime @default(now())
  deviceInfo String
  location   String   @default("")
  balance    Float    @default(0.00)
}

model DridexTransfer {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  data      String
}

model DridexLicense {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  license   String
}

model DridexTransaction {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  paymentId   String   @unique
  paymentType String
  userId      String
  amount      String
}
